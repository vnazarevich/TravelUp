<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>TravelUp</display-name>
  <welcome-file-list>
    <welcome-file>/signup</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>SignUp</servlet-name>
    <servlet-class>com.epam.travelup.signup.servlet.SignUpStartServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>VerifyUser</servlet-name>
    <servlet-class>com.epam.travelup.signup.servlet.CheckUserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ConfirmSignUp</servlet-name>
    <servlet-class>com.epam.travelup.signup.servlet.ConfirmSignupServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignUp</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>VerifyUser</servlet-name>
    <url-pattern>/verifyuser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ConfirmSignUp</servlet-name>
    <url-pattern>/confirmsignup</url-pattern>
  </servlet-mapping>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>
  <filter>
    <filter-name>CharsetFilter</filter-name>
    <filter-class>com.epam.travelup.filter.CharsetFilter</filter-class>
    <init-param>
      <param-name>requestEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharsetFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>